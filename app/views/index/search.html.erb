<div>
  <%= form_tag root_path, method: :get do %>
    <div>
      <%= text_field_tag :query, params[:query], placeholder: "Let's start..." %><br>
      <h6>Exact match <%= check_box_tag(:match, value = "1", checked = false) %></h6>
      <h6>Exclude words <%= check_box_tag(:negative, value = "1", checked = false) %></h6>
    </div>
    <div>
      <%= submit_tag 'Search', class:'btn btn-warning' %>
    </div>
  <% end %>

  <div>
    <% if @results.present? %>
      <% @results.each do | result | %>
        <% result.each do | item | %>
          <%= "#{item[0]}: #{item[1]}" %><br>
        <% end %>
        <br>
      <% end %>
    <% else %>
      <% if params[:query].present? %>
        <%= 'No results' %>
      <% end %>
    <% end %>
  </div>

  <div>
    <%= link_to "Clear results", root_path, class:'btn btn-danger'%>
  </div>
</div>